{
    "input_shape": [28, 28, 1],
    "output_shape": [10],
    "optimizer": "Adam",
    "learning_rate": 0.001,
    "loss_function": "categorical_crossentropy",
    "batch_size": 32,
    "num_epochs": 10,
    "metric_name": "accuracy",
    "layers": [
        {
            "type": "convolutional",
            "params": {
                "num_filters": 32,
                "filter_size": 3,
                "stride": 1,
                "padding": "same",
                "activation": "relu"
            }
        },
        {
            "type": "pooling",
            "params": {
                "pool_size": 2,
                "stride": 2,
                "pool_type": "max"
            }
        },
        {
            "type": "fully_connected",
            "params": {
                "num_neurons": 128,
                "activation": "relu"
            }
        }
    ]
}
